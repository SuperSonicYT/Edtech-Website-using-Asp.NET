@model SkillVertex_Learning_Portal.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<img src="~/images/contact.jpg" style="position: absolute; left: 0; top: 140px; width: 100%; padding:0px;" />

<div>
    <a asp-action="Index">Back to List</a>
</div>

<section class="contact-us" style="margin-top: 500px;" id="contact" >
    <div class="container">
      <div class="row">
        <div class="col-lg-8 align-self-center">
          <div class="row">
            <div class="col-lg-12">
              <form asp-action="Create" id="contact">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                  <div class="col-lg-12">
                    <h2>Let's get in touch</h2>
                  </div>
                  <div class="col-lg-6">
                    <fieldset>
                      <input  asp-for="UserName"  class="form-control" name="name" type="text" id="name" placeholder="Your Name*" />
                      <span asp-validation-for="UserName" class="text-danger"></span>
                    </fieldset>
                  </div>
                  <div class="col-lg-6">
                    <fieldset>
                      <input asp-for="EmailAddress" class="form-control" name="email" type="text" id="email" placeholder="Your Email Address*" />
                      <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <input asp-for="Subject" class="form-control" name="subject" type="text" id="subject" placeholder="Subject*" />
                      <span asp-validation-for="Subject" class="text-danger"></span>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <textarea asp-for="Message" class="form-control" name="message" type="text" id="message" placeholder="Your Message..." ></textarea>
                      <span asp-validation-for="Message" class="text-danger"></span>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="button">SEND MESSAGE NOW</button>
                    </fieldset>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="right-info" id="contact-us" style="text-align: center;">
            <ul>
              <li>
                <h3 style="text-align: center; color: white;">Want to<br>Become a Mentor?</h3>
              </li>
              <li>
                <h6>Send a mail to</h6>
                <span>hr@skillvertex.in</span>
                <span>support@skillvertex.in</span>
              </li>
              <li>
                <h6>Or give us a call on</h6>
                <span>960 601 2806</span>
              </li>
              <li>
                <h6>Don't forget to attach your</h6>
                <span>LinkedIn Address</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

